<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %> <br>

    <body class="bg-light">
    <%- include('partials/nav') %>
        <div id="details-wrapper">

            <div id="carDetails">
                <h2 id="detailTitle">Car Details</h2>
                <br>
                <p><strong>Make:</strong>
                    <%= car[0].make %>
                </p>
                <p><strong>Model:</strong>
                    <%= car[0].model %>
                </p>
                <p><strong>Year:</strong>
                    <%= car[0].year %>
                </p>
                <p><strong>Color:</strong>
                    <%= car[0].color %>
                </p>
                <p><strong>Purchase Date:</strong>
                    <% if (car[0].pur_date == null) { %>
                        No purchase date entered.
                    <% } else { %>
                        <%= car[0].pur_date.toString().substring(4,15) %>
                    <% } %>
                </p>
                <p><strong>License Plate No.:</strong>
                    <%= car[0].plate_no %>
                </p>

                <button id="editDetails" class="btn btn-outline-secondary btn-sm">Edit Details</button>
            </div>
            <br><br>
            <div id="repairDetails">
                <div>
                    <h3>Repair Details</h3>
                    <button id="addRepair" class="btn btn-primary">Add a Repair</button><br>
                </div>
                <% if (repairs.length> 0) { %>
                    <% for (i in repairs) { %>
                        <div class="repair-item">
                            <p><strong>Date:</strong>
                                <%= repairs[i].date.toString().substring(4,15) %>
                            </p>
                            <p><strong>Repair Shop:</strong>
                                <%= repairs[i].shop %>
                            </p>
                            <p><strong>Mileage:</strong>
                                <%= repairs[i].mileage %>
                            </p>
                            <p><strong>Category:</strong>
                                <%= repairs[i].category %>
                            </p>
                            <p><strong>Description:</strong>
                                <%= repairs[i].description %>
                            </p>
                            <button class="deleteRepairBtn btn btn-outline-danger btn-sm"
                                value="<%=repairs[i].repair_id%>">Remove</button>
                        </div>
                        <br>
                        <% } } else { %>
                            <p>No repair records found for this car.</p>
                            <% } %>
            </div>
        </div>

        <!-- Modals -->
        <!-- Edit Car -->
        <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Car Details</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editDetailsForm" method="POST" action="/api/car/edit">
                            <input type="hidden" name="car_id" value="<%=car[0].car_id%>">
                            Make: <input id="makeSelect" type="text" name="make" value="<%=car[0].make%>"><br>
                            Model: <select id="modelSelect" name="model" value="<%=car[0].model%>"></select><br>
                            Year: <input type="number" name="year" value="<%=car[0].year%>"><br>
                            Color: <input type="text" name="color" value="<%=car[0].color%>"><br>
                            Purchase Date: <input type="date" name="pur_date"
                                value="<%=car[0].pur_date.toISOString().substring(0,10)%>"><br>
                            License Plate No.: <input type="text" name="plate_no" value="<%=car[0].plate_no%>"><br>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Repair -->
        <div class="modal fade" id="addRepairModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add A Repair</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addRepairForm" method="POST" action="/api/repair/add">
                            <input type="hidden" name="car_id" value="<%=car[0].car_id%>">
                            Date <input type="date" name="date"><br>
                            Repair Shop: <input type="text" name="shop"><br>
                            Category:
                            <select name="category">
                                <% for (i in categories) { %>
                                    <option value="<%=categories[i]%>">
                                        <%=categories[i]%>
                                    </option>
                                    <% } %>
                            </select><br>
                            Mileage: <input type="number" name="mileage"><br>
                            Description: <br>
                            <textarea name="description" rows="4" cols="40"></textarea><br>
                            <button type="submit" class="btn btn-primary">Add Repair</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Repair -->
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this repair record?</p>
                        <form id="deleteRepairForm" method="POST" action="/api/repair/delete">
                            <input type="hidden" name="car_id" value="<%=car[0].car_id%>">
                            <button type="submit" class="btn btn-warning">Delete Repair</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/details_script.js"></script>
        <%- include("partials/footer.ejs") %>
    </body>

</html>